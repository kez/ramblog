- if !@post and @posts
  - if @posts.size > 0
    - if @offset
      = "Page #{@offset} of #{@page_count}"
      - if @offset > 1
        %a{:href => r(:page, @offset -1)}= 'Previous'
      - if @offset < @page_count
        %a{:href => r(:page, @offset +1)}= 'Next'
    
      
    - @posts.each do |post|
      - if post != nil
        = render_partial("/_front-page-post", 'post' => post)

   


- if @post
  = render_partial("/_post", 'post' => @post)